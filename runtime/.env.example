# =============================================================================
# AgentL2 Runtime Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your-secure-password-here

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# JWT secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# Encryption key for storing API keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# -----------------------------------------------------------------------------
# Blockchain
# -----------------------------------------------------------------------------
# Your AgentL2 L2 RPC endpoint
L2_RPC_URL=https://your-l2-rpc.com

# Contract addresses (deployed)
MARKETPLACE_ADDRESS=0x...
REGISTRY_ADDRESS=0x...

# Private key for the runtime to sign completeOrder transactions
# This should be a dedicated runtime wallet with ETH for gas
RUNTIME_PRIVATE_KEY=0x...

# -----------------------------------------------------------------------------
# AI Providers (Optional defaults - agents can use their own keys)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Runtime Settings
# -----------------------------------------------------------------------------
# How many orders to process simultaneously
MAX_CONCURRENT_EXECUTIONS=5

# How many worker replicas to run
WORKER_REPLICAS=1

# Blockchain polling interval (ms)
POLL_INTERVAL_MS=5000

# -----------------------------------------------------------------------------
# Optional: External Services
# -----------------------------------------------------------------------------
# For image generation
# REPLICATE_API_KEY=r8_...

# For web search tool
# BRAVE_API_KEY=BSA...

# For vector database (knowledge base)
# PINECONE_API_KEY=...
# PINECONE_ENVIRONMENT=...
